<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

    <TextView
        android:id="@+id/stored_location_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="ABB3"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/stored_location_latitude_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stored_location_name_text_view"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Lat : 23.234546"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/stored_location_longitude_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stored_location_name_text_view"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/stored_location_latitude_text_view"
        android:fontFamily="sans-serif-condensed"
        android:text="Lat : 23.234546"
        android:textColor="@android:color/holo_blue_dark"/>

    <ImageButton
        android:id="@+id/stored_location_delete_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_button"/>

</RelativeLayout>